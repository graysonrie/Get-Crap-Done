{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ben's Image Scanner",
  "version": "0.1.0",
  "identifier": "com.bensimagescanner.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "Ben's Image Scanner",
        "width": 500,
        "height": 500,
        "minWidth": 400,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}